
DirectoryIndex index.php

# تأمين إرسال ملفات التايب سكريبت كملفات جافا سكريبت للمتصفح
<IfModule mod_mime.c>
    AddType application/javascript .ts
    AddType application/javascript .tsx
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # منع الدخول للمجلدات الحساسة
    RewriteRule ^(laravel|admincp|services|components)/.*$ - [F,L]
    
    # توجيه الطلبات إلى index.php إذا لم يكن الملف موجوداً
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L]
</IfModule>

# تفعيل التخزين المؤقت لتحسين السرعة
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>
