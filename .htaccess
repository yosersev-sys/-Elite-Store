
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # السماح للملفات الحقيقية بالتحميل مباشرة
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # توجيه باقي المسارات لـ index.html
    RewriteRule ^ index.html [L]
</IfModule>

# تأمين إرسال ملفات التايب سكريبت كنصوص ليتمكن المترجم من معالجتها
<FilesMatch "\.(tsx|ts)$">
    ForceType text/plain
    Header set Content-Type "text/plain"
    Header set Access-Control-Allow-Origin "*"
</FilesMatch>

# منع التخزين المؤقت للملفات البرمجية أثناء ضبط الإعدادات
<FilesMatch "\.(html|tsx|ts|js)$">
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>
