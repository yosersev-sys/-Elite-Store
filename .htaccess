
# متجر النخبة - إعدادات التشغيل على Hostinger
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # إذا كان الملف موجوداً، لا تقم بتحويله
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # توجيه كل المسارات لـ index.html
    RewriteRule ^ index.html [L]
</IfModule>

# السماح بقراءة ملفات البرمجة كنصوص (مهم جداً لمحرك Babel)
<FilesMatch "\.(tsx|ts|jsx)$">
    ForceType text/plain
    Header set Content-Type "text/plain; charset=utf-8"
    Header set Access-Control-Allow-Origin "*"
</FilesMatch>

# تعطيل التخزين المؤقت أثناء التطوير لضمان قراءة التعديلات فوراً
<FilesMatch "\.(html|tsx|ts)$">
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
</FilesMatch>

# السماح بأساليب الجلب المختلفة (CORS)
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
</IfModule>
