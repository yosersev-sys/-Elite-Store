DirectoryIndex index.php
Options -Indexes

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # 1. استثناء الملفات الموجودة فعلياً لضمان تحميلها
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # 2. السماح لملفات النظام بالعمل مباشرة دون توجيه
    RewriteRule ^(load\.php|api\.php|config\.php|seed\.php|sitemap\.xml|sw\.js) - [L]
    
    # 3. توجيه كافة الطلبات الأخرى لـ index.php للتعامل معها برمجياً
    # هذا يضمن أن رابط مثل /admincp سيفتح index.php بدلاً من خطأ 404
    RewriteRule ^ index.php [L]
</IfModule>

<IfModule mod_headers.c>
    <FilesMatch "\.(ts|tsx|js|jsx)$">
        Header set Content-Type "application/javascript"
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>