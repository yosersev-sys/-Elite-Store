
# Elite Store - Static Hosting Rules
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # إذا كان الملف موجوداً، قدمه مباشرة
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # توجيه كافة المسارات لـ index.html لدعم React Router
    RewriteRule ^ index.html [L]
</IfModule>

# إجبار السيرفر على تقديم ملفات TSX كنص ليتمكن المحرك من قراءتها
<FilesMatch "\.(tsx|ts|jsx)$">
    ForceType text/plain
    Header set Content-Type "text/plain"
</FilesMatch>

# تعطيل الكاش لضمان تحديث الكود فوراً عند الرفع
<FilesMatch "\.(html|tsx|ts)$">
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>
