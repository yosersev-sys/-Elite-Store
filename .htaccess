
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # إذا كان الملف موجوداً كملف حقيقي، لا تلمسه
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]
  
  # توجيه الروابط الوهمية لـ index.html لدعم React Router
  RewriteRule . /index.html [L]
</IfModule>

# منع السيرفر من اعتبار ملفات الكود كجافا سكريبت تنفيذية قبل الترجمة
# هذا يحل خطأ SyntaxError لأن المترجم هو من سيقوم بطلبها
<FilesMatch "\.(tsx|ts)$">
    ForceType text/plain
    Header set Content-Type "text/plain"
</FilesMatch>

# تفعيل CORS للسماح للمترجم بسحب الملفات
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
</IfModule>
