
DirectoryIndex index.php

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # 1. استثناء ملفات الـ API والمجلدات الحقيقية والملفات الموجودة بالفعل من التوجيه لـ index.php
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # 2. ضمان توجيه كافة الطلبات الأخرى لمحرك التطبيق الرئيسي
    RewriteRule ^ index.php [L]
</IfModule>

<IfModule mod_headers.c>
    <FilesMatch "\.(ts|tsx|js|jsx|php)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>
