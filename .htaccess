
# Elite Store - Static Hosting Rules
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # إذا كان الملف موجوداً كملف حقيقي، قم بفتحه مباشرة
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # توجيه كافة المسارات الأخرى لـ index.html لدعم نظام React
    RewriteRule ^ index.html [L]
</IfModule>

# إجبار السيرفر على تقديم ملفات TSX كنص ليتمكن المحرك الخارجي من ترجمتها
<FilesMatch "\.(tsx|ts|jsx)$">
    ForceType text/plain
    Header set Content-Type "text/plain"
    Header set Access-Control-Allow-Origin "*"
</FilesMatch>

# تعطيل الكاش مؤقتاً لضمان وصول التحديثات الجديدة فوراً
<FilesMatch "\.(html|tsx|ts|js)$">
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>
