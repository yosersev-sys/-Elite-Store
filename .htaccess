
# Elite Store - Production Rules
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # إذا كان الطلب لملف حقيقي موجود، اتركه يمر
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # توجيه أي مسار آخر لـ index.html لدعم React Router
    RewriteRule ^ index.html [L]
</IfModule>

# السماح لملفات الكود بالظهور كملفات نصية ليتمكن المترجم من سحبها
<FilesMatch "\.(tsx|ts|jsx)$">
    ForceType text/plain
    Header set Content-Type "text/plain"
    Header set Access-Control-Allow-Origin "*"
</FilesMatch>

# تعطيل التخزين المؤقت أثناء حل المشكلة لضمان رؤية النتائج فوراً
<FilesMatch "\.(html|tsx|ts|js)$">
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>
