
# Elite Store - Hosting Optimizations
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # السماح بالوصول المباشر للملفات الموجودة
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # توجيه كل شيء لـ index.html
    RewriteRule ^ index.html [L]
</IfModule>

# ضمان أن المتصفح يرى ملفات البرمجة كنصوص قابلة للقراءة
<FilesMatch "\.(tsx|ts|jsx)$">
    ForceType text/plain
    Header set Content-Type "text/plain"
    Header set Access-Control-Allow-Origin "*"
</FilesMatch>

# منع التخزين المؤقت أثناء التطوير لضمان رؤية التحديثات
<FilesMatch "\.(html|tsx|ts)$">
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
</FilesMatch>
