DirectoryIndex index.php

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # استثناء مجلد الـ API من إعادة التوجيه
    # نستخدم ^api/ بدون شرط الـ URI ليكون متوافقاً مع المجلدات الفرعية
    RewriteRule ^api/ - [L]

    # السماح بالوصول للملفات الموجودة فعلياً
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # توجيه كل شيء آخر إلى المحرك الرئيسي
    RewriteRule ^ index.php [L]
</IfModule>

<IfModule mod_headers.c>
    <FilesMatch "\.(ts|tsx|js|jsx)$">
        Header set Access-Control-Allow-Origin "*"
        Header set Content-Type "application/javascript"
    </FilesMatch>
</IfModule>